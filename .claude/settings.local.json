{
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch(domain:docs.polymarket.com)",
      "WebFetch(domain:www.polymarketdata.co)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:docs.bitquery.io)",
      "Bash(where:*)",
      "Bash(npm ls:*)",
      "Bash(npm install:*)",
      "Bash(node:*)",
      "Bash(curl:*)",
      "Bash(taskkill:*)"
